super + alt + Escape
	bspc quit

super + c
	bspc node -c

# super + t
#	bspc desktop -l next

super + {t,p,s,f} 
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {n,N} 
  bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + shift + bracket{left,right}
  bspc node -d {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + space
	bspc node -p cancel

super + alt + {h,j,k,l}
	bspc node -e {west -10,south +10,north -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -r {east -10,north +10,south -10,west +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + r
	dmenu_run -b -dim 0.3 -fn Dweep -x 710 -y 3 -w 500 -sb gray -sf darkslategray

super + R 
  urxvt -e $(sh -c "ls /usr/bin | dmenu -b -dim 0.3 -fn Dweep -x 710 -y 3 -w 500 -sb gray -sf darkslategray")

super + x
  xrdb -merge ~/.Xresources

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
